<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/xingch_list_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <TextView
        android:id="@+id/xingch_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:textColor="#222222"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xingch_list_item_fromcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发城市"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/xingch_list_item_fromdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="出发时间"
            android:textColor="#222222"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xingch_list_item_tocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到达城市"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/xingch_list_item_todate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="到达时间"
            android:textColor="#222222"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>