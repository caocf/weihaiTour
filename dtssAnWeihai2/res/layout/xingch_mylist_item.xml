<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/xingch_mylist_item_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_search_traf" />

    <TextView
        android:id="@+id/xingch_mylist_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xingch_mylist_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/xingch_mylist_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="名称"
                android:textColor="#222222"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xingch_mylist_item_traff_datelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xingch_mylist_item_traff_fromcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发城市"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/xingch_mylist_item_traff_fromdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="出发时间"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xingch_mylist_item_traff_tocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到达城市"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/xingch_mylist_item_traff_todate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="到达时间"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xingch_mylist_item_other_datelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/xingch_mylist_item_other_fromdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/xingch_mylist_item_other_todate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="结束时间"
                android:textColor="#222222"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/xingch_mylist_item_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="备注"
            android:textColor="#222222"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>