<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

           <TextView
               android:id="@+id/name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:padding="5dp"
               android:layout_marginBottom="10dp"
               android:background="#aaa"
               android:singleLine="true"
               android:textColor="#222222"
               android:text="标题"
               android:textSize="18dp" />
           
            <ImageView
               android:id="@+id/image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center" />

           <TextView
               android:id="@+id/name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:padding="5dp"
               android:layout_marginBottom="10dp"
               android:background="#aaa"
               android:singleLine="true"
               android:textColor="#222222"
               android:text="基本信息"
               android:textSize="18dp" />
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical">
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="活动开始时间："/>
            
		            <TextView
		               android:id="@+id/timeBegin"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="活动结束时间："/>
            
		            <TextView
		               android:id="@+id/timeEnd"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="活动时间："/>
            
		            <TextView
		               android:id="@+id/when"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="主板城市："/>
            
		            <TextView
		               android:id="@+id/hostCity"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="网址："/>
            
		            <TextView
		               android:id="@+id/url"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="电话："/>
            
		            <TextView
		               android:id="@+id/hotline"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" 
	                android:orientation="horizontal">
		            <TextView
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:gravity="right"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="活动景区："/>
            
		            <TextView
		               android:id="@+id/where"
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            </LinearLayout>
            </LinearLayout>
           
            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:padding="5dp"
               android:layout_marginTop="10dp"
               android:background="#aaa"
               android:singleLine="true"
               android:textColor="#222222"
               android:text="详细内容"
               android:textSize="18dp" />
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:padding="10dp"
                android:orientation="vertical">
		            <TextView
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="行程内容"/>
            
		            <TextView
		               android:id="@+id/what"
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
		            
		            <TextView
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="预定须知"/>
            
		            <TextView
		               android:id="@+id/booking_notice"
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
		            
		            <TextView
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="费用说明"/>
            
		            <TextView
		               android:id="@+id/fee_notice"
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
		            
		            <TextView
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:padding="5dp"
		               android:singleLine="true"
		               android:textColor="#77C2D1"
		               android:textSize="16dp" 
		               android:layout_weight="1"
		               android:text="温馨提示"/>
            
		            <TextView
		               android:id="@+id/other_notice"
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:textSize="16dp"
		               android:layout_weight="1" />
	            
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>