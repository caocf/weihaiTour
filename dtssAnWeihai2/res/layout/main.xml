<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3f5f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
    	android:background="#00479d"
        android:orientation="vertical" >

        <Button
            android:id="@+id/main_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/main_logo" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#00479D"
            android:textSize="24sp"
            android:textStyle="bold" />
        

        <LinearLayout
            android:id="@+id/main_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="威海"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/weather_wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="--"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/weather_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/weathericon_condition_01" />
        </LinearLayout>
        
        
		<ImageView
		    android:id="@+id/qrcode"
		    android:layout_width="60dp"
		    android:layout_height="30dp"
		    android:layout_marginRight="10dp"
		    android:src="@drawable/qrcode" 
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@id/main_weather"/>
		
		<ImageView
		    android:id="@+id/btnSearch"
		    android:layout_width="60dp"
		    android:layout_height="30dp"
		    android:src="@drawable/search" 
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@id/qrcode"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bottom_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/main1"
            android:text="主页"
            android:textColor="#7C7C7C" />

        <Button
            android:id="@+id/bottom_guide"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/guide1"
            android:text="导游导览"
            android:textColor="#7C7C7C" />

        <Button
            android:id="@+id/bottom_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/phone1"
            android:text="电话"
            android:textColor="#7C7C7C" />

        <Button
            android:id="@+id/bottom_nearby"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/nearby1"
            android:text="身边"
            android:textColor="#7C7C7C" />
        
        <Button
            android:id="@+id/bottom_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/more1"
            android:text="更多"
            android:textColor="#7C7C7C" />
    </LinearLayout>

</LinearLayout>