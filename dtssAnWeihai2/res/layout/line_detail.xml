<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/line_detail_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#EEEFEE"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="名称"
                android:textColor="#222222"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/line_detail_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#EEEFEE"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="基本信息"
                android:textColor="#222222"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　出发时间："
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　发布部门："
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　联系电话："
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#EEEFEE"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="详细内容"
                android:textColor="#222222"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="行程描述"
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="行程描述"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="价格描述"
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_pricedesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="价格描述"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="特别提醒"
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="特别提醒"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="温馨提示"
                    android:textColor="#00B6ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/line_detail_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="温馨提示"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>